{
  "version": 2,
  "builds": [
    {
      "src": "app.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "app.py"
    }
  ],
  "env": {
    "PYTHON_VERSION": "3.12"  // Use latest stable; check Vercel support
  },
  "functions": {
    "app.py": {
      "maxDuration": 30,  // Increase if needed (max 60s on Pro)
      "memory": 1024      // MB; default 128, up to 3008
    }
  }
}
